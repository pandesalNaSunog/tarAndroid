<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingBottom="30dp">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="DATA PRIVACY POLICY"
        android:textColor="@color/darkBlue"
        android:textStyle="bold"
        android:letterSpacing=".5"/>

    <TextView
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This content is strictly confidential and may not be copied or disseminated without the owner's consent. It should only be utilized for system validation. If you are not the intended receiver, you are not allowed to share or otherwise utilize the information in this handbook. The information is not meant to be a solicitation or offer to purchase or sell any security."/>

    <android.widget.Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_blue_button"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="OK"
        android:textColor="@color/darkBlue"/>
</LinearLayout>